# FaultMaven Session Service - Environment Configuration

# ============================================================================
# Storage Configuration (Pluggable Backends)
# ============================================================================
# Session storage: inmemory (dev/testing) | redis (production)
SESSION_STORAGE_TYPE=redis

# Redis connection (when SESSION_STORAGE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_DECODE_RESPONSES=true

# Redis High Availability (Sentinel mode for enterprise K8s)
# REDIS_MODE: "standalone" (default, dev/self-hosted) or "sentinel" (enterprise HA)
REDIS_MODE=standalone
# REDIS_SENTINEL_HOSTS: Comma-separated "host:port,host:port" (required when REDIS_MODE=sentinel)
REDIS_SENTINEL_HOSTS=
# REDIS_MASTER_SET: Sentinel master set name (default: mymaster)
REDIS_MASTER_SET=mymaster

# ============================================================================
# Application Settings
# ============================================================================
PORT=8002
LOG_LEVEL=INFO
ENVIRONMENT=development
